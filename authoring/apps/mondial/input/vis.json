[
    {
        "db": "mondial",
        "query": {
            "table": "country",
            "dimensions": ["name", "code"],
            "measure": "SUM(population)",
            "sampleFields": ["capital", "area"]
        },
        "type": "circlePack",
        "tooltip": {
            "columns": ["name", "kyrixAggValue"],
            "aliases": ["Country", "Population"]
        },
        "legend": {"title": "Countries with the Largest Population"},
        "textFields": ["name"]
    },
    {
        "db": "mondial",
        "query": {
            "table": "province",
            "dimensions": ["name", "country"],
            "measure": "SUM(population)",
            "sampleFields": []
        },
        "type": "treemap",
        "tooltip": {
            "columns": ["country", "name", "kyrixAggValue"],
            "aliases": ["Country", "Province", "Population"]
        },
        "legend": {"title": "Provinces and their Population"},
        "textFields": ["name", "country"]
    },
    {
        "db": "mondial",
        "query": {
            "table": "city",
            "dimensions": ["name", "country", "province"],
            "measure": "SUM(elevation)",
            "sampleFields": []
        },
        "type": "bar",
        "tooltip": {
            "columns": ["name", "province", "country", "kyrixAggValue"],
            "aliases": ["City", "Province", "Country", "Elevation"]
        },
        "legend": {"title": "Cities and their Elevations"},
        "axis": {
            "yTitle": "Elevation (meter)"
        }
    },
    {
        "visTitle": "Airports on a Map",
        "data": {
            "db": "mondial",
            "query": "select iatacode, name, country, province, city, latitude, longitude, elevation from airport;"
        },
        "layout": {
            "x": {"field": "longitude"},
            "y": {"field": "latitude"},
            "z": {"field": "elevation", "order": "desc"},
            "geo": {
                "center": [0, 0],
                "level": 2
            }
        },
        "marks": {
            "cluster": {
                "mode": "dot",
                "config": {
                    "clusterCount": false,
                    "dotSizeColumn": "elevation",
                    "dotSizeDomain": [-1000, 4500],
                    "dotSizeLegendTitle": "Elevation (meter)",
                    "dotColor": "black"
                }
            },
            "hover": {
                "tooltip": {
                    "columns": [
                        "iatacode",
                        "name",
                        "country",
                        "province",
                        "city",
                        "latitude",
                        "longitude",
                        "elevation"
                    ],
                    "aliases": [
                        "Code",
                        "Name",
                        "Country",
                        "Province",
                        "City",
                        "Latitude",
                        "Longitude",
                        "Elevation (meter)"
                    ]
                }
            }
        },
        "config": {
            "numLevels": 8
        }
    }
]
